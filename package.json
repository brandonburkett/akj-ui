{
  "name": "akj-ui",
  "version": "2.0.0",
  "private": true,
  "engines": {
    "node": ">= 10",
    "npm": ">= 6"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "prerender": "react-snap",
    "test": "react-scripts-ts test --env=jsdom --watchAll=false",
    "eject": "react-scripts-ts eject",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "tslint --project .",
    "lint:style": "stylelint \"**/*.css\" --fix",
    "prettier:write": "prettier --write './**/*.{ts,tsx,css}'",
    "prettier:check": "prettier -l './**/*.{ts,tsx,css}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "stylelint",
      "git add"
    ]
  },
  "reactSnap": {
    "saveAs": "html",
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  },
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0",
    "react-image-gallery": "^0.8.12",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "3.1.0",
    "smoothscroll-polyfill": "^0.4.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/react-helmet": "^5.0.7",
    "@types/react-image-gallery": "^0.8.3",
    "@types/react-router-dom": "^4.3.1",
    "@types/smoothscroll-polyfill": "^0.3.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react-snap": "^1.22.1",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended": "^2.1.0",
    "typescript": "^3.2.2"
  }
}
