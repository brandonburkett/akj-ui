{
  "name": "akj-ui",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom --watchAll=false",
    "eject": "react-scripts-ts eject",
    "lint": "npm run lint:ts && lint:style",
    "lint:ts": "tslint --project .",
    "lint:style": "stylelint \"**/*.css\" --fix",
    "prettier:write": "prettier --write './**/*.{ts,tsx,css}'",
    "prettier:check": "prettier -l './**/*.{ts,tsx,css}'",
    "precommit": "lint-staged && npm run test"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint",
      "stylelint",
      "git add"
    ],
    "*.{css}": [
      "prettier --write",
      "stylelint",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "2.17.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.8",
    "@types/react": "^16.4.9",
    "@types/react-dom": "^16.0.7",
    "@types/react-helmet": "^5.0.7",
    "@types/react-router-dom": "^4.3.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "prettier": "^1.14.2",
    "stylelint": "^9.4.0",
    "stylelint-config-recommended": "^2.1.0",
    "typescript": "^3.0.1"
  }
}
