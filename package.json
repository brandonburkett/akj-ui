{
  "name": "akj-ui",
  "version": "2.0.0",
  "private": true,
  "engines": {
    "node": ">= 12",
    "npm": ">= 6"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "prerender": "react-snap",
    "test": "react-scripts-ts test --env=jsdom --watchAll=false",
    "eject": "react-scripts-ts eject",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "tslint --project .",
    "lint:style": "stylelint \"**/*.css\" --fix",
    "prettier:write": "prettier --write './**/*.{ts,tsx,css}'",
    "prettier:check": "prettier -l './**/*.{ts,tsx,css}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "stylelint",
      "git add"
    ]
  },
  "reactSnap": {
    "saveAs": "html",
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-image-gallery": "^0.8.17",
    "react-router-dom": "^5.0.0",
    "react-scripts-ts": "3.1.0",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.4",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-helmet": "^5.0.8",
    "@types/react-image-gallery": "^0.8.3",
    "@types/react-router-dom": "^4.3.3",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "react-snap": "^1.23.0",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "typescript": "^3.5.1"
  }
}
